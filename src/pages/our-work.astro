---
import { Image } from 'astro:assets'
import CTA from '../components/sections/CTA.astro'
import HeroOurWork from '../components/sections/HeroOurWork.astro'
import BtnLink from '../components/shared/BtnLink.astro'
import Layout from '../layouts/Layout.astro'
import BlogsScroll from '../components/shared/BlogsScroll.astro'
---

<Layout title='Our Work | Bitwit Techno' description='' image=''>
  <main class='flex flex-col gap-y-20 md:gap-y-32 overflow-hidden'>
    <HeroOurWork />

    <div
      class='mx-auto grid max-w-6xl grid-cols-1 grid-rows-[auto_1fr] gap-y-16 pt-16 md:pt-20 lg:grid-cols-12 lg:gap-y-20 lg:px-3 lg:pb-36 lg:pt-20 xl:py-32'
    >
      <div class='relative flex items-end lg:col-span-5 lg:row-span-2'>
        <div
          class='absolute -bottom-12 -top-20 left-0 right-1/2 z-10 rounded-br-3xl bg-blue-600 text-white/10 md:bottom-8 lg:-inset-y-32 lg:left-[-100vw] lg:right-full lg:-mr-40'
        >
          <svg aria-hidden='true' class='absolute inset-0 h-full w-full'
            ><defs
              ><pattern
                id=':S2:'
                width='128'
                height='128'
                patternUnits='userSpaceOnUse'
                x='100%'
                y='100%'
                patternTransform='translate(112 64)'
                ><path d='M0 128V.5H128' fill='none' stroke='currentColor'
                ></path></pattern
              ></defs
            ><rect width='100%' height='100%' fill='url(#:S2:)'></rect></svg
          >
        </div><div
          class='relative z-10 mx-auto flex w-64 rounded-xl shadow-2xl px-5 pt-10 md:w-80 lg:w-auto'
        >
          <Image
            alt='/images/our-work-description.webp'
            fetchpriority='high'
            width='960'
            height='1284'
            decoding='async'
            data-nimg='1'
            class='w-full'
            style='color:transparent'
            src='/images/our-work-description.webp'
          />
        </div>
      </div><div
        class='relative px-4 sm:px-6 lg:col-span-7 lg:pb-14 lg:pl-16 lg:pr-0 xl:pl-20'
      >
        <div
          class='hidden lg:absolute lg:-top-32 lg:bottom-0 lg:left-[-100vw] lg:right-[-100vw] lg:block lg:bg-blue-50 dark:bg-box-bg'
        >
        </div><figure
          class='relative mx-auto max-w-md text-center lg:mx-0 lg:text-left rounded-3xl'
        >
          <blockquote class='mt-2'>
            <p
              class='font-display text-xl font-medium text-slate-900 dark:text-white'
            >
              “Explore the artistry behind our projects – where excellence meets
              innovation.”
            </p>
          </blockquote><figcaption class='mt-2 text-sm text-slate-500'>
            <strong class="font-semibold text-blue-600 before:content-['—_']"
              >Mridul Rathore</strong
            >, Founder at Bitwit Techno
          </figcaption>
        </figure>
      </div><div
        class='bg-white pt-16 lg:col-span-7 lg:bg-transparent lg:pl-16 lg:pt-0 xl:pl-20'
      >
        <div class='mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:px-0'>
          <h1
            class='font-display text-5xl font-extrabold text-blue-950 dark:text-white sm:text-6xl'
          >
            Vision to Reality Transformation.
          </h1><p class='mt-4 text-3xl text-blue-950 dark:text-slate-500'>
            Exceptional work, echoing passion, precision, and purpose with
            impactful results.
          </p><div class='mt-8 flex gap-4'>
            <BtnLink
              text='Find Out More'
              href='/about-us'
              className='flex justify-center w-full sm:w-max'
              variant='primary'
            />
          </div>
        </div>
      </div>
    </div>

    <BlogsScroll />

    <CTA />
  </main>
</Layout>
