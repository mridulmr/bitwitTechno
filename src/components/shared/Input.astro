---
export interface Props {
  className?: string
  containerClassName?: string
  type: any
  label: string
  error: string
  name: string
  placeholder: string
}

const { name, label, placeholder, type, className, containerClassName, error } =
  Astro.props
---

<div class={`flex flex-col ${containerClassName}`}>
  <label class='font-semibold text-gray-900 dark:text-white' for={name}
    >{label}</label
  >
  <input
    id={name}
    name={name}
    type={type}
    placeholder={placeholder}
    class=`transition-all w-full p-4 border rounded-lg bg-transparent backdrop-blur-sm outline-none outline-offset-0 focus:outline-1 focus:outline-blue-500 focus:border-blue-700 appearance-none ${className}`
  />
  {error && <p class='text-sm text-end text-red-400'>{error}</p>}
</div>
