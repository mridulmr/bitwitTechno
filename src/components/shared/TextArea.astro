---
export interface Props {
  className?: string
  containerClassName?: string
  label: string
  error: string
  name: string
  placeholder: string
}

const { name, label, placeholder, className, containerClassName, error } =
  Astro.props
---

<div class={`flex flex-col ${containerClassName}`}>
  <label class='font-semibold text-gray-900 dark:text-white' for={name}
    >{label}</label
  >
  <textarea
    id={name}
    name={name}
    placeholder={placeholder}
    class={`transition-all w-full p-4 border rounded-lg bg-transparent backdrop-blur-sm outline-none outline-offset-0 focus:outline-1 focus:outline-blue-500 focus:border-blue-700 resize-none ${className}`}
  ></textarea>
  {error && <p class='text-sm text-end'>{error}</p>}
</div>
