---
export interface Props {
  className?: string;
  variant: "primary" | "secondary";
  label: string;
  error: string;
  name: string;
  placeholder: string;
}

const { name, label, placeholder, variant, className, error } = Astro.props;
---

<div class="flex flex-col">
  <label class="font-bold text-blue-950 dark:text-white" for={name}>{label}</label>
  <textarea
    id={name}
    name={name}
    placeholder={placeholder}
    class="w-full p-4 border rounded-lg bg-transparent backdrop-blur-sm"
  ></textarea>
  {error && <p class="text-sm text-end">{error}</p>}
</div>
