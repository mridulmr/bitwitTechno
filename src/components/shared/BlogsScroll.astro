---
import { Image } from 'astro:assets'
import BtnLink from './BtnLink.astro'
import Container from './Container.astro'
import { GetBlog } from '../../api'

const { Blogs } = await GetBlog()
---

<Container>
  <div class='max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12'>
    <div>
      <p
        class='inline-block px-3 py-px mb-4 text-xs font-semibold tracking-wider text-blue-900 uppercase rounded-full bg-teal-accent-400'
      >
        Blog & Airticle
      </p>
    </div>
    <h2
      class='max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-blue-950 dark:text-white sm:text-4xl md:mx-auto'
    >
      <span class='relative inline-block'>
        <svg
          viewBox='0 0 52 24'
          fill='currentColor'
          class='absolute top-0 left-0 z-0 hidden w-32 -mt-8 -ml-20 text-blue-gray-100 lg:w-32 lg:-ml-28 lg:-mt-10 sm:block'
        >
          <defs>
            <pattern
              id='f51618fb-0edb-4bcb-b35a-ffc770941286'
              x='0'
              y='0'
              width='.135'
              height='.30'
            >
              <circle cx='1' cy='1' r='.7'></circle>
            </pattern>
          </defs>
          <rect
            fill='url(#f51618fb-0edb-4bcb-b35a-ffc770941286)'
            width='52'
            height='24'></rect>
        </svg>
        <span class='relative'>Take A Look At</span>
      </span>
       The Latest Articles
    </h2>
  </div>
  <div
    class='bg-blue-500 dark:bg-blue-950 rounded-3xl h-[350px] mt-36 shadow-box-shadow shadow-lg'
  >
    <div class='relative'>
      <div
        class='absolute -top-28 right-10 left-10 flex gap-5 overflow-y-scroll no-scrollbar'
      >
        {
          Blogs.map((item) => (
            <div class='min-w-[400px] w-[400px] bg-white dark:bg-box-bg p-5 rounded-2xl shadow-box-shadow'>
              <Image
                class='w-full h-[60%] mb-4'
                width={100}
                height={100}
                src={item.image}
                alt={item.image}
              />
              <p class='text-lg font-bold mb-4 text-clip whitespace-nowrap overflow-clip dark:text-gray-50'>
                {item.title}
              </p>
              <BtnLink
                text='Find out More'
                href={`/blogs/${item.slug}`}
                className='flex justify-center w-full sm:w-max'
                variant='primary'
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Container>
