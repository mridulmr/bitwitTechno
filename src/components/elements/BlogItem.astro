---
import { Image } from 'astro:assets'
import moment from 'moment'
const { data, user, category } = Astro.props
---

<div
  class='bg-white dark:bg-box-bg shadow-lg shadow-box-shadow rounded-[8px] transition duration-100 hover:shadow-xl'
>
  <div class='course-thumb h-[260px] rounded-t-[8px] relative'>
    <Image
      src={data.image}
      alt={data.image}
      width={100}
      height={100}
      class='w-full h-full object-cover rounded-t-[8px]'
    />
    <span
      class='bg-primary py-1 px-3 text-lg font-semibold rounded text-white absolute left-6 top-6'
      >{category.name}</span
    >
  </div>
  <div class='p-4'>
    <div class='flex lg:space-x-10 space-x-5 mb-5'>
      <a
        class='flex items-center space-x-2 dark:text-gray-500'
        href={`/blogs/${data.slug}`}
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='18'
          height='18'
          viewBox='0 0 18 18'
          fill='none'
        >
          <path
            fill-rule='evenodd'
            clip-rule='evenodd'
