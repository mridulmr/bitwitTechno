---
import { Image } from 'astro:assets'
import Container from '../../shared/Container.astro'
import Paragraph from '../../shared/Paragraph.astro'
import Title from '../../shared/Title.astro'

const { tabList } = Astro.props
---

<Container>
  <div class='text-center max-w-3xl mx-auto space-y-4 mb-16'>
    <Title>Why choose us</Title>
    <Paragraph>
      IT Excellence: Elevate Your Business with Our Cutting-Edge Solutions and
      Commitment.
    </Paragraph>
  </div>

  <div class='why-us grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5'>
    {
      tabList.map((item: any, index: number) => (
        <div class='group relative shadow-lg rounded-lg overflow-hidden dark:bg-box-bg'>
          <div class='h-full p-5 hover:backdrop-blur-sm transition-all'>
            <span class='text-4xl font-thin block text-blue-950 dark:text-white'>
              {index + 1}
            </span>
            <p class='text-xl font-bold block text-blue-950 dark:text-white'>
              {item.title}
            </p>
            <p class='mt-5 text-gray-500 dark:text-gray-500'>{item.description}</p>
          </div>
          <Image
            width={100}
            height={100}
            src={item.image}
            alt={item.image}
            decoding='async'
            loading='lazy'
            class='opacity-0 group-hover:opacity-10 w-[120%] h-[120%] rounded-lg absolute top-0 left-0 bottom-0 right-0 z-10 transition-all'
          />
        </div>
      ))
    }
  </div>
</Container>
