---
import Container from '../../shared/Container.astro'
import Paragraph from '../../shared/Paragraph.astro'
import Title from '../../shared/Title.astro'

const { tabList } = Astro.props
---

<style></style>

<Container>
  <div class='text-center max-w-3xl mx-auto space-y-4 mb-16'>
    <Title>Why choose us</Title>
    <Paragraph>
      IT Excellence: Elevate Your Business with Our Cutting-Edge Solutions and
      Commitment.
    </Paragraph>
  </div>

  <div class='why-us grid grid-cols-6 lg:grid-cols-4 gap-5'>
    {
      tabList.map((item: any, index: number) => (
        <div class='shadow-lg rounded-lg relative overflow-hidden cursor-pointer'>
          <div class='backdrop-blur-sm bg-white bg-opacity-50 h-full p-5 hover:backdrop-blur-none transition-all'>
            <span class='text-4xl font-thin block text-right'>{index + 1}</span>
            <h4 class='text-xl font-bold block text-right'>{item.title}</h4>
            <p class='text-start mt-5'>{item.description}</p>
          </div>
          <img
            src={item.image}
            alt={item.image}
            class='w-[120%] h-[120%] rounded-lg absolute top-0 left-0 bottom-0 right-0 -z-10'
          />
        </div>
      ))
    }
  </div>
</Container>
