---
import Container from "../../shared/Container.astro";
import Title from "../../shared/Title.astro";
import Info from "../../cards/Info.astro";
import { companyValues } from "../../../utils/data";
import Paragraph from "../../shared/Paragraph.astro";
---

<section class="relative">
  <div class="absolute w-full inset-y-0">
    <span
      class="absolute right-0 bottom-0 left-0 top-0 w-12/12 h-6/6 bg-primary opacity-5"
    ></span>
  </div>
  <div class="backdrop-blur-xl py-10">
    <Container className="space-y-8">
      <div class="text-center max-w-3xl mx-auto mt-10">
        <Title>Our Values</Title>
        <Paragraph className="mt-4">
          We values innovation, quality, and client satisfaction. Our
          collaborative, agile approach prioritizes transparency, inclusivity,
          ethics, continuous learning, and environmental responsibility.
        </Paragraph>
      </div>

      <div class="grid md:grid-cols-3 !mt-20 !mb-10 gap-7">
        {
          companyValues.map((item) => (
            <Info
              borderDisable
              backgroundDisable
              description={item.description}
              title={item.title}
            >
              <span slot="icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="30"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4 h-4 sm:w-5 sm:h-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
                  />
                </svg>
              </span>
            </Info>
          ))
        }
      </div>
    </Container>
  </div>
</section>
