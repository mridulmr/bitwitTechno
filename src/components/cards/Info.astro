---
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  title: string;
  description: string;
  borderDisable: boolean;
  backgroundDisable: boolean;
}
const {
  title,
  description,
  borderDisable = false,
  backgroundDisable = false,
} = Astro.props;
---

<div
  class={`${backgroundDisable ? "" : "bg-box-bg"} ${
    borderDisable ? "" : "border"
  } p-5 sm:p-6 lg:p-8 rounded-3xl border-box-border shadow-lg shadow-box-shadow relative overflow-hidden`}
>
  <div
    class="rounded-xl bg-gray-300 dark:bg-blue-950 p-3 text-heading-1 w-max relative"
  >
    <slot name="icon" />
  </div>
  <h2 class="md:text-xl font-semibold text-heading-2 mt-6 mb-4">{title}</h2>
  <Paragraph>
    {description}
  </Paragraph>
</div>
